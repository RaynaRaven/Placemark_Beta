<form class="box" action="/category/{{category._id}}/addLocation" method="POST">
    <label>Enter Location Details:</label>
    <div class="field is-horizontal">
        <div class="field-body">
            <div class="field">
                <input class="input" type="text" placeholder="Enter name" name="name">
            </div>
            <div class="field">
                <input class="input" type="text" placeholder="Enter Description" name="description">
            </div>
            <div class="field">
                <input class="input" type="text" placeholder="Enter Location" name="location">
            </div>
        </div>
    </div>
    <button class="button is-primary">Add Location</button>
</form>